              <p class="font-arvo text-blueOne font-bold">13 Rue Victor Cousin, 75005 Paris</p>
            </div>
            <!-- theater address -->
            <div class="container flex space-x-10  ">

              <div class="flex w-[45%] shadow-xl h-[15vh] bg-whiteOne">
                <div class="flex flex-col  w-[80%] py-2 h-full">
