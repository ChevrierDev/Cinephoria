<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link type="text/css" rel="stylesheet" href="css/output.css" />
    <link rel="stylesheet" href="css/style.css">
    <link rel="icon" href="/images/logo-blanc.png" type="image/x-icon">
    <script src="js/form-switcher.js" defer></script>
    <script src="js/activeLink.js" defer></script>
    <script src="js/main.js" defer></script>
    <script src="js/login.js" defer></script>
</head>
<body class="relative min-h-screen pb-20">
    <header class="relative">
        <!-- navbar section -->
        <%- include('../components/nav-bar') %>
    </header>

    <main class="flex items-center justify-center min-h-screen mb-28 relative">
        
        <% if (error_msg && error_msg.length > 0) { %>
            <ul id="error-container" class="absolute w-fit h-fit top-0 flex flex-col items-center justify-center space-y-2">
                <% error_msg.forEach(error => { %>
                    <li class="font-arvo font-bold text-redOne text-center text-sm list-none"><%= error %></li>
                <% }) %>
            </ul>
           
        <% } %>
      
        
        <!-- connection container -->
        <div class="w-full max-w-lg md:max-w-2xl lg:max-w-4xl xl:max-w-6xl">

            <div class=" w-[30%] text-green-700 mx-auto font-bold  text-center tracking-wide text-lg font-arvo text-nowrap" id="login-message"></div>

            <div class="font-arvo px-10 pt-20  w-full  ">
                <h1 class="text-blueOne font-extrabold text-center text-2xl mb-20 md:text-3xl">CONNEXION</h1>
                
                <div class="flex space-x-4 justify-between mb-16">
                    <a href="/login" id="login-link" class="form-link active">
                        <h2 class="text-fill  text-blueOne font-extrabold text-center text-base md:text-xl">JE M'IDENTIFIE</h2>
                    </a>
                    <a href="/register" id="register-link" class="form-link">
                        <h2 class="text-fill  text-blueOne font-extrabold text-center text-base md:text-xl">JE CRÃ‰E UN COMPTE</h2>
                    </a>
                </div>
            </div>

            <!-- login and register form -->
            <div class=""  id="form-container">
                <%- include('../components/login-form', { redirectUrl: redirectUrl }) %>
            </div>
            
        </div>
    </main>

    <footer>
        <!-- footer section -->
        <%- include('../components/footer') %>
      </footer>
</body>
</html>